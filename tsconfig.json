{
  "compilerOptions": {
    "outDir": "./dist/",
    "declaration":true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "pretty": true,
    "target": "es5",
    "jsx": "react-jsx",
    "types": ["node", "jest"],
    "baseUrl": "./src",
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*", "__sandbox__"]
}
