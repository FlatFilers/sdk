{
  "extends": "../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "declaration":true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "pretty": true,
    "target": "es5",
    "jsx": "react-jsx",
    "types": ["node", "jest"],
    "isolatedModules": false
  },
  "exclude": ["node_modules", "dist", "tests/**/*", "**/*.spec.ts", "jest.config.ts"],
  "references": []
}
