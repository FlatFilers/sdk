{
  "name": "@flatfile/sdk",
  "version": "1.0.5",
  "description": "Flatfile SDK",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlatFilers/sdk.git"
  },
  "bugs": {
    "url": "https://github.com/FlatFilers/sdk/issues"
  },
  "homepage": "https://github.com/FlatFilers/sdk#readme",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "analyze": "webpack --progress --config webpack.analyze.js",
    "prebuild": "rm -rf ./dist",
    "build": "npm run build:types && npm run build:webpack",
    "build:types": "tsc --emitDeclarationOnly",
    "build:webpack": "webpack --progress --config webpack.prod.js",
    "lint": "eslint ./src --ext '.ts,.tsx'",
    "lint:fix": "eslint ./src --ext '.ts,.tsx' --fix",
    "prepack": "npm run build",
    "start": "webpack serve --progress --config webpack.dev.js",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "prepare": "husky install"
  },
  "author": "Max Blank <max@flatfile.com>",
  "license": "ISC",
  "dependencies": {
    "eventemitter3": "^4.0.7",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "graphql-subscriptions-client": "^0.16.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-react-jsx": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/backo2": "^1.0.1",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/styled-components": "^5.1.10",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "babel-jest": "^27.0.5",
    "babel-loader": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-webpack": "^7.0.3",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^6.0.0",
    "jest": "^27.0.3",
    "lint-staged": "^11.0.0",
    "nqr": "^1.0.0",
    "prettier": "^2.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.0",
    "ts-jest": "^27.0.3",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4",
    "webpack": "^5.40.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "<rootdir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "prettier --check"
    ]
  }
}
